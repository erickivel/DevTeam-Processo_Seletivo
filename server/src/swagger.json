{
  "openapi": "3.0.0",
  "info": {
    "title": "ImpacTo-Do Documentation",
    "description": "This is an API documentation for a to-do list project.",
    "version": "1.0.0"
  },
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Create a user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "passwordConfirmation": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "User Name Sample",
                  "password": "SecretPassword",
                  "passwordConfirmation": "SecretPassword"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "403": {
            "description": "Passwords are not matching"
          }
        }
      }
    }
  }
}