{
  "openapi": "3.0.0",
  "info": {
    "title": "ImpacTo-Do Documentation",
    "description": "This is an API documentation for a to-do list project.",
    "version": "1.0.0"
  },
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Create a user",
        "description": "Create a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "passwordConfirmation": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "User Name Sample",
                  "password": "SecretPassword",
                  "passwordConfirmation": "SecretPassword"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "403": {
            "description": "Passwords are not matching"
          }
        }
      }
    },
    "/users/sessions": {
      "post": {
        "tags": [
          "User"
        ],
        "summary": "Authenticate user",
        "description": "Authenticate user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "User Name Sample",
                  "password": "SecretPassword"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Authenticated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        }
                      }
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Name or password incorrect"
          }
        }
      }
    },
    "/tasks": {
      "post": {
        "tags": [
          "Task"
        ],
        "summary": "Create task",
        "description": "Create a new Task",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "subjectName": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Task example",
                  "subjectName": "Subject example"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "done": {
                      "type": "boolean"
                    },
                    "subjectName": {
                      "type": "string"
                    },
                    "userId": {
                      "type": "string"
                    },
                    "subjectId": {
                      "type": "string"
                    },
                    "createdAt": {
                      "type": "date"
                    },
                    "updatedAt": {
                      "type": "date"
                    }
                  },
                  "token": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "403": {
            "description": "User not exist"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}